<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/item_layout_client"
    android:layout_marginTop="@dimen/item_card_margin_top"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:translationZ="@dimen/item_card_translation_z"
        android:layout_margin="@dimen/item_card_margin"
        app:cardCornerRadius="@dimen/item_card_corner">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="20dp">

            <TextView
                android:id="@+id/item_txt_id_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_id"
                android:textSize="@dimen/txt_id_size"
                android:textColor="@color/primary_text"/>

            <TextView
                android:id="@+id/item_txt_name_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:text="@string/test_name"
                android:layout_toEndOf="@id/item_txt_id_client"
                android:textSize="17sp"
                android:layout_marginStart="35dp"/>

            <TextView
                android:id="@+id/item_txt_phone_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_phone"
                android:layout_below="@id/item_txt_id_client"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/item_txt_address_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_address"
                android:layout_below="@id/item_txt_phone_client"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>