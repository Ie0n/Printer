<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="130dp"
    android:layout_gravity="center"
    android:padding="10dp">

    <TextView
        android:id="@+id/password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入密码"
        android:textColor="@color/accent"
        android:textSize="21sp" />

    <View
        android:id="@+id/password_divider"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@id/password_title"
        android:background="@color/divider" />

    <EditText
        android:id="@+id/password_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_divider"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:hint="建议输入四位数密码" />

    <TextView
        android:id="@+id/password_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="完成"
        android:textSize="18sp"
        android:textColor="@color/accent" />

    <TextView
        android:id="@+id/password_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@id/password_ok"
        android:textSize="18sp"
        android:text="取消" />

</RelativeLayout>